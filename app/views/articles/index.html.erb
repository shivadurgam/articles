<p id="notice"><%= notice %></p>

<h1>Listing Articles</h1>

    <ol type="1">
    <% @articles.each do |article| %>
      
      
      <li><strong><%= article.name %></strong>
      <%= link_to 'Show', article %>
      <%= link_to 'Edit', edit_article_path(article) %>
      <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %><br /><br/><br />
      <%= article.content %><br />
      

      </li>
    <% end %>
     

<br>

